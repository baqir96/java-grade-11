public class FirstLast
{             public static void main ( String[] args ){    
  String str1;      
  str1="word";
  String fristletter=str1.substring (0,1);
  String lastletter=str1.substring (3);
  System.out.println("frist letter is " + fristletter);
  System.out.println("last letter is " + lastletter);
  
  
  
}
}
  