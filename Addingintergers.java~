/** 
* Adds all the intergers together
* Muhammad Baqir
* Apr/17/13
*/ 
import java.util.Scanner;
public class Addingintergers {
public static void main (String [] args){
   Scanner scan = new Scanner( System.in );
   int numinterger, num, count, equation;
   System.out.print("How many integers will be added: ");
   numinterger = scan.nextInt();
   count = 1;
   equation = 0;
   while ( count <= numinterger)
   {
   count = count + 1;
   System.out.print("Enter an interger: ");
   num = scan.nextInt();
   equation = equation + num;
   }
   System.out.println( "The sum is: " + equation);   
}
}